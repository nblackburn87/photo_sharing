<h1><%= @photo.name %></h1>

<p><%= image_tag @photo.image.url(:main) %></p>

<hr>

<p><%= link_to "Edit Photo", edit_photo_path(@photo), :class => "btn btn-primary" %></p>
<p><%= link_to "Delete Photo", photo_path(@photo),
                              data: { confirm: 'You sure?' },
                              method: "delete",
                              :class => "btn btn-danger" %></p>
<%= link_to "Homepage", photos_path, :class => "btn btn-primary" %>
